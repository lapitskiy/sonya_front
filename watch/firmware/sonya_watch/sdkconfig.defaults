CONFIG_IDF_TARGET="esp32s3"
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"

# Flash size (Waveshare ESP32-S3 Touch AMOLED 2.06 is typically >= 8MB flash)
CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y

# Default wake mode: allow both button and wake phrase
CONFIG_WAKE_MODE_MULTI=y

# NimBLE (not Bluedroid)
CONFIG_BT_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_BT_BLUEDROID_ENABLED=n
CONFIG_BT_NIMBLE_MAX_CONNECTIONS=1
CONFIG_BT_NIMBLE_ROLE_CENTRAL=n
CONFIG_BT_NIMBLE_ROLE_OBSERVER=n
CONFIG_BT_NIMBLE_ROLE_BROADCASTER=y
CONFIG_BT_NIMBLE_ROLE_PERIPHERAL=y

# Enable PSRAM so we can buffer audio safely
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_SPEED_80M=y
CONFIG_SPIRAM_USE_MALLOC=y

# NimBLE buffers: increase to avoid ENOMEM during audio notify bursts
CONFIG_BT_NIMBLE_MSYS_1_BLOCK_COUNT=32
CONFIG_BT_NIMBLE_MSYS_2_BLOCK_COUNT=48
CONFIG_BT_NIMBLE_TRANSPORT_ACL_FROM_LL_COUNT=48

# WakeNet (esp-sr): pick at least one wake phrase, otherwise wakenet_model_name is NULL and wake_init fails.
# Wake phrase: "Hi Joy"
CONFIG_SR_WN_WN9_HIJOY_TTS=y

# UI: LVGL (kept isolated, status_ui routes to it)
CONFIG_UI_LVGL_ENABLE=y

# LVGL fonts: make UI readable + allow symbol icons to be visible
CONFIG_LV_FONT_MONTSERRAT_20=y
CONFIG_LV_FONT_MONTSERRAT_28=y

# LVGL widgets used by UI
CONFIG_LV_USE_GIF=y

# Keep firmware small: do not compile LVGL examples/demos
# (we only use the library itself)
# Note: must be applied via sdkconfig (defaults fill missing options).
CONFIG_LV_BUILD_EXAMPLES=n
CONFIG_LV_BUILD_DEMOS=n

# Decode embedded PNG assets for lv_image
CONFIG_LV_USE_LODEPNG=y

# LVGL memory: use system malloc (PSRAM-capable) instead of tiny built-in pool
CONFIG_LV_USE_CLIB_MALLOC=y
